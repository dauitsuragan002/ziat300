{
  "manifest_version": 3,
  "name": "Ziat300",
  "version": "1.0",
  "description": "Summarize web pages and videos using AI.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon":"images/icon.png"  
  },
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
